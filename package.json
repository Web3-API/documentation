{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/documentation",
    "packages/snippet-tools"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "npx rimraf ./node_modules ./**/build ./**/node_modules && yarn clean:docs",
    "clean:docs": "npx rimraf ./packages/documentation/docs ./packages/documentation/.docusaurus",
    "reset": "yarn clean && yarn && yarn build"
  },
  "devDependencies": {
    "lerna": "^6.0.3",
    "rimraf": "3.0.2"
  }
}
